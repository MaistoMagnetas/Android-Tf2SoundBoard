<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.pc.tf2soundboard.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/scout"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnScout"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp"
        android:background="@color/noFill" />

    <Button
        android:id="@+id/btnSoldier"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnScout"
        android:layout_toRightOf="@+id/btnScout"
        android:background="@color/noFill" />

        <Button
        android:id="@+id/btnPyro"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnSoldier"
        android:layout_toRightOf="@+id/btnSoldier"
        android:background="@color/noFill" />

    <Button
        android:id="@+id/btnDemo"
        android:layout_width="35dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/btnPyro"
        android:layout_toRightOf="@+id/btnPyro"
        android:background="@color/noFill" />

    <Button
        android:id="@+id/btnHeavy"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnDemo"
        android:layout_toRightOf="@+id/btnDemo"
        android:background="@color/noFill" />

    <Button
        android:id="@+id/btnEngi"
        android:layout_width="35dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnHeavy"
        android:layout_toRightOf="@+id/btnHeavy"
        android:background="@color/noFill" />

    <Button
        android:id="@+id/btnMedic"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/btnEngi"
        android:layout_toRightOf="@+id/btnEngi"
        android:background="@color/noFill" />

    <Button
        android:id="@+id/btnSniper"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnMedic"
        android:layout_toRightOf="@+id/btnMedic"
        android:background="@color/noFill" />

    <Button
        android:id="@+id/btnSpy"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnSniper"
        android:layout_toRightOf="@+id/btnSniper"
        android:background="@color/noFill" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/btnSpy"
        android:layout_toRightOf="@+id/btnSpy"
        android:background="@drawable/roundedsubmitbutton"
        android:text="Submit"
        android:textColor="#FFF" />

</RelativeLayout>
